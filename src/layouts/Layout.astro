---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-b from-gray-900 to-zinc-700 min-h-screen text-yellow-50 mx-auto max-w-3xl px-6 sm:px-8 flex flex-col gap-4"
  >
    <h1
      class="text-7xl font-bold text-center pt-8 mt-4 pb-4 bg-gradient-to-r from-yellow-100 via-black-500 to-yellow-500 inline-block text-transparent bg-clip-text"
    >
      <a href="/">LeosDev Blog</a>
    </h1>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>
